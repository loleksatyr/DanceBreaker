@page
@model DanceBreaker.Pages.Account.LoginModel
@{
}
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credentails.Number"></label>
            </div> 
            <div class="col-5">
                <input type="text" asp-for="Credentails.Number" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Credentails.Number"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credentails.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credentails.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Credentails.Password"></span>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                
            </div>
        </div>
    </form>
</div>